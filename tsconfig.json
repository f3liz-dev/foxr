{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "build",
    "pretty": true,
    "lib": ["esnext", "dom"],
    "typeRoots": [ "types/", "node_modules/@types/" ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/", "coverage/", "build/", "tmp/", "test/"]
}
